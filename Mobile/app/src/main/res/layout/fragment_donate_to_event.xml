<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/layDonateToEvent"
    android:layout_margin="20dp"
    android:background="@color/background"

    tools:context=".donation.DonationEvent.DonateToEvent">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/eventlogo" />

    <TextView
        android:id="@+id/txtNameEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinContributionCenter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textAlignment="center" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/base"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:text="@string/contributionDate" />

        <EditText
            android:id="@+id/txtcontributionDate"
            android:layout_width="241dp"
            android:layout_height="wrap_content"
            android:inputType="date" />
    </LinearLayout>

    <EditText
        android:id="@+id/txtContributionDesc"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Ingrese informaciÃ³n adicional"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/btnContribution"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/base"
        android:text="@string/confirm" />

</LinearLayout>